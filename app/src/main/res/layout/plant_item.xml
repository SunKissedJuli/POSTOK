<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:background="@color/stone">
    <ImageView
        android:layout_margin="15dp"
        android:id="@+id/PlantItemImage"
        android:src="@drawable/avatar1"
        android:background="@drawable/roundsmall_imagebutton"
        android:layout_width="90dp"
        android:layout_height="90dp"/>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical">
        <TextView
            android:id="@+id/PlantItemName"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Название растения"
            android:textColor="@color/brown"
            android:fontFamily="sans-serif-medium"
            android:textSize="15dp"/>
        <TextView
            android:text="Тут идёт длиное описание юзера абоба абоба абоба абоба абоба абоба абоба"
            android:textSize="14dp"
            android:textColor="@color/brown"
            android:fontFamily="sans-serif"
            android:id="@+id/PlantItemDiscription"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:maxHeight="60dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/ToPlantProfile"
            android:text="Перейти"
            android:layout_marginTop="10dp"
            android:textColor="@color/brown"
            android:textSize="12dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_button"
            android:layout_width="130dp"
            android:layout_height="20dp"/>
    </LinearLayout>

</LinearLayout>