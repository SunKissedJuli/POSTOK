<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".Fragments.UserPageFragment"
        android:id="@+id/Fragment_User_Page"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:background="@color/blue"
            android:layout_gravity="top"
            android:gravity="top"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/stone"
                android:orientation="vertical"
                android:layout_alignParentTop="true">
                <LinearLayout
                    android:id="@+id/HeadUserLayout"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_margin="15dp"
                        android:id="@+id/UserImage"
                        android:background="@drawable/round_imagebutton"
                        android:layout_width="130dp"
                        android:layout_height="130dp"/>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/UserProfileName"
                            android:layout_marginTop="15dp"
                            android:text="Имя Юзера"
                            android:textSize="16dp"
                            android:fontFamily="sans-serif-black"
                            android:textColor="@color/brown"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"/>
                        <TextView
                            android:id="@+id/UserProfileDiscription"
                            android:text="Тут идёт длиное описание юзера абоба абоба абоба абоба абоба абоба абоба"
                            android:textSize="14dp"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/brown"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:maxHeight="100dp"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:id="@+id/ChangeProfileButton"
                            android:text="Изменить"
                            android:onClick="onClick"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/brown"
                            android:textSize="12dp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_gravity="left"
                            android:background="@drawable/rounded_button"
                            android:layout_width="130dp"
                            android:layout_height="35dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:background="@color/stone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <Button
                        android:layout_marginLeft="10dp"
                        android:id="@+id/PlantButton"
                        android:onClick="onClick"
                        android:text="растения"
                        android:background="@color/stone"
                        android:textColor="@color/brown"
                        android:layout_width="100dp"
                        android:layout_height="30dp"/>
                    <Button
                        android:id="@+id/PhotoButton"
                        android:onClick="onClick"
                        android:text="фото"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@color/stone"
                        android:textColor="@color/brown"
                        android:layout_width="100dp"
                        android:layout_height="30dp"/>
                    <Button
                        android:id="@+id/NotesButton"
                        android:onClick="onClick"
                        android:text="Записи"
                        android:background="@color/stone"
                        android:textColor="@color/brown"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>
            </LinearLayout>


            <androidx.core.widget.NestedScrollView
                android:id="@+id/NestedScrollNote"
                android:visibility="gone"
                android:fillViewport="true"
                android:layout_marginTop="273dp"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="67dp">

                <ListView

                    android:id="@+id/NoteListView"
                    android:background="@color/blue"
                    android:dividerHeight="15dp"
                    android:nestedScrollingEnabled="true"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                </ListView>
            </androidx.core.widget.NestedScrollView>
            <androidx.core.widget.NestedScrollView
                android:id="@+id/NestedScrollPlant"
                android:visibility="gone"
                android:fillViewport="true"
                android:layout_marginTop="273dp"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="67dp">
                <ListView
                    android:id="@+id/PlantListView"
                    android:background="@color/blue"
                    android:dividerHeight="15dp"
                    android:nestedScrollingEnabled="true"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                </ListView>
            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/UserBlackout"
                android:layout_marginBottom="67dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/gray"
                android:orientation="horizontal" />

            <include layout="@layout/bottomsheet_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_gravity="bottom"/>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>